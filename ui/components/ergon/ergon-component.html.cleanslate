<script>
// This script is a lightweight connector that loads the actual component script
// from the correct location and initializes the component when the page loads.

document.addEventListener('DOMContentLoaded', function() {
    // Load the Ergon component script
    const scriptPath = '/scripts/ergon/ergon-component.js';
    
    // Create a script element
    const script = document.createElement('script');
    script.src = scriptPath;
    script.async = true;
    script.onload = function() {
        // Initialize the component once loaded
        if (window.ergonComponent && typeof window.ergonComponent.init === 'function') {
            window.ergonComponent.init();
        } else {
            console.error('Ergon component not properly loaded');
        }
    };
    script.onerror = function() {
        console.error('Failed to load Ergon component script');
    };
    
    // Add the script to the document
    document.head.appendChild(script);
});
</script>